<body>
    <h1>Image Gallery</h1>
    <div class="gallery">
        <img src="https://via.placeholder.com/150" onclick="openModal(this)">
        <img src="https://via.placeholder.com/150/111" onclick="openModal(this)">
        <img src="https://via.placeholder.com/150/222" onclick="openModal(this)">
        <img src="https://via.placeholder.com/150/333" onclick="openModal(this)">
        <img src="https://via.placeholder.com/150/444" onclick="openModal(this)">
    </div>
    <div class="modal" id="modal">
        <span class="close" onclick="closeModal()">&times;</span>
        <img id="modalImg">
    </div>
    <script>
        function openModal(img) {
            document.getElementById("modal").style.display = "flex";
            document.getElementById("modalImg").src = img.src;
        }
        function closeModal() {
            document.getElementById("modal").style.display = "none";
        }
    </script>
